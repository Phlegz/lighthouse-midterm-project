<div>
	<% function titleize(s) { %>
		<% return s[0].toUpperCase() + s.slice(1); %>
	<% } %>

	<%  var genres = ['appies', 'mains', 'desserts', 'beverages'];  %>
	<% for (var genre_id in genres) { %>
		<% var genre_name = genres[genre_id]; %>
		<% var dish_list = dishes[genre_name]; %>
			<section class='menu'>
				<h2><a id="<%= genre_name %>" name="<%= genre_name %>"><%= titleize(genre_name) %></a></h2>
				<div class="row">
					<% for (var dish_id in dish_list) { %>
						<% var dish = dish_list[dish_id] %>
						<div class="col-sm-6 col-md-3">
							<div class="thumbnail">
								<img alt="samplefood" src="<%= dish.image_url %>">
								<div class="caption">
									<h3><%= dish.name %></h3>
									<p><%= dish.description %></p>
									<p>$<%= dish.price %></p>
									<p><span
										class="btn btn-primary add-to-cart" 
										role="button"
										data-id="<%= dish.id %>"
										data-name="<%= dish.name %>"
										data-price="<%= dish.price %>"
									>Add to Order</span></p>
								</div>
							</div>
						</div>
					<% } %>
				</div>
			</section>
	<% } %>

</div>